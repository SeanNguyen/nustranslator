<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--actionBar-->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:popupWindowStyle">@style/popupMenuStyle</item>

        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>

        <item name="android:textViewStyle">@style/defaultText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/whiteThemeColor</item>
    </style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/violet_theme_color</item>
    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@drawable/start_stop_button</item>
        <item name="android:divider">@color/grayThemeColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textColor">@color/violet_theme_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OverFlowIcon" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/start_stop_button</item>
    </style>

    <style name="defaultText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/whiteThemeColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/violet_theme_color</item>
        <item name="android:background">@drawable/start_stop_button</item>
    </style>

</resources>
